<body class="login">

    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/Image/logo1.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form">
            <h3 class="form-title" style="text-align:center;color:#ac1630;">订单管理系统</h3>
            <div class="form-group vgroup">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">用户名</label>
                <div class="input-icon vinput">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" id="userName" autocomplete="off" placeholder="用户名" name="username" required />
                </div>
            </div>
            <div class="form-group vgroup">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="input-icon vinput">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix userPwd" id="userPwd" type="password" autocomplete="off" placeholder="密码" name="password" required />
                </div>
            </div>
            <div class="form-group vgroup">
                <label class="control-label visible-ie8 visible-ie9">验证码</label>
                <div class="input-icon vinput">
                    <i class="fa fa-code"></i>
                    <input class="form-control placeholder-no-fix imageCode-input" id="imgCode" type="text" autocomplete="off" placeholder="验证码" name="verify" required />
                    <img id="imgcode" class="authcode" title="点击刷新验证码" src="@this.Href("~/User/VerifyCode")" width="80" height="34">
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn green login-submit"> 登 录 </button>
            </div>

            <div class="err-text">
                <p class="errInfo"></p>
            </div>
        </form>
        <!-- END LOGIN FORM -->
    </div>
