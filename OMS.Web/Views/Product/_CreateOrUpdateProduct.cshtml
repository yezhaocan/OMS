@model OMS.Model.ProductModel
<div class="form-body">
    <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button> You have some form errors. Please check below.
    </div>
    <div class="alert alert-success display-hide">
        <button class="close" data-close="alert"></button> Your form validation is successful!
    </div>
    <div class="form-group  margin-top-20">
        <label class="control-label col-md-3">
            中文名
            <span class="required"> * </span>
        </label>
        <div class="col-md-4">
            <div class="input-icon right">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            英文名
        </label>
        <div class="col-md-4">
            <div class="input-icon right">
                <i class="fa"></i>
                @Html.EditorFor(model => model.NameEn, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            商品编码
            <span class="required"> * </span>
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model=>model.Code,new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            商品类型
            <span class="required"> * </span>
        </label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Type, Model.Types, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            国家
        </label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Country, Model.Countries, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            产区
        </label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Area, Model.Areas, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            葡萄品种
        </label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Grapes, Model.GrapeItems, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            容量
        </label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Capacity, Model.Capacitys, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            包装方式
        </label>
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Packing, Model.Packings, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            年份
        </label>
        <div class="col-md-4">
            <div class="input-icon right">
                <i class="fa"></i>
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
</div>

<div class="form-actions">
    <div class="row">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn green">提交</button>
            <button type="button" class="btn default">取消</button>
        </div>
    </div>
</div>